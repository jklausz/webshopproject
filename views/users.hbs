<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>

<body>
    {{#each userData}}

    <form>
        <div class="form-group">
            <label for="formGroupExampleInput">{{name}}</label>
            <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Example name">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">{{email}}</label>
            <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">{{address}}</label>
            <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Example address">
        </div>
        <div>
            <textarea name="special" cols="30" rows="10" maxlength="500"></textarea>
        </div>
        <div>
            <input id="submit" type="submit" value="Ajánlatkérés" onclick="alert('Ajánlatkérését elküldte!')" />
        </div>
    </form>
    {{/each}}
</body>